<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/fragAjoutEnfant"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activity.MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView18"
        android:layout_above="@+id/scrollView"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignRight="@+id/scrollView"
        android:layout_alignEnd="@+id/scrollView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView19"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView20"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtIdEnfant"
            android:hint="Donner  l'identificateur" />

        <EditText
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNomEnfant"
            android:hint="Donner le nom"
            />

        <EditText
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Donner le prÃ©nom"
            android:id="@+id/txtPrenomEnfant" />

        <EditText
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/txtDate_naissanceEnfant"
            android:hint="Donner la Date naissance"
             />
        <EditText
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtEcoleEnfant"
            android:ems="10"
            android:hint="Institut"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajouter"
                android:id="@+id/btAjouterEnfant"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/btInscrire"
                android:layout_toEndOf="@+id/btInscrire" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Effacer"
                android:id="@+id/btEffacerEnfant"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/btAjouterEnfant"
                android:layout_toEndOf="@+id/btAjouterEnfant" />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
